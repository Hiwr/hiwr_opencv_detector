<launch>
    <arg name="device" default="MicrosoftÂ® LifeCam Cinema(TM)" />

    <node name="uvc_cam_node" pkg="facetracking" type="uvc_cam_node" output="screen">
    	<remap from="camera/image_raw" to="camera/rgb/image_color" />
